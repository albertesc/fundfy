---
import Card from "../components/Card.astro";
import Contact from "../components/Contact.astro";
import Faqs from "../components/Faqs.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />
  <main>
    <Hero />
    <Card />
    <Faqs />
    <Contact />
  </main>
  <Footer />
  <div class="fixed w-full h-full top-0 left-0 right-0 bottom-0 -z-50">
    <div class="max-w-[1130px] mx-auto w-full h-full px-4 relative">
      <span class="block w-[0.5px] h-full absolute top-0 left-0 bg-black"
      ></span>
      <span class="block w-[0.5px] h-full absolute top-0 left-1/4 bg-black"
      ></span>
      <span class="block w-[0.5px] h-full absolute top-0 left-2/4 bg-black"
      ></span>
      <span class="block w-[0.5px] h-full absolute top-0 left-3/4 bg-black"
      ></span>
      <span
        class="block w-[0.5px] h-full absolute top-0 left-none right-0 bg-black"
      ></span>
    </div>
  </div>
</Layout>
